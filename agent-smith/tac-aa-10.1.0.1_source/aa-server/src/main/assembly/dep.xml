<assembly>
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
    <includes>
      <include>README*</include>
      <include>LICENSE*</include>
      <include>NOTICE*</include>
    </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/resources</directory>
      <excludes>
        <exclude>**/*.slg</exclude>
        <exclude>**/*.log</exclude>
        <exclude>**/logs/**</exclude>
        <exclude>**/infodb/**</exclude>
        <exclude>**/public_html/**</exclude>
      </excludes>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/resources</directory>
      <includes>
        <include>**/config/tasim_viewer.conf</include>
      </includes>
      <outputDirectory>/public_html/code/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/public_html/code/</outputDirectory>
      <includes>
        <include>aa-common*</include>
        <include>aa-viewer*</include>
        <include>jcommon*</include>
        <include>jfreechart*</include>
        <include>tasim*</include>  
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>